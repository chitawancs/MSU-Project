<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".AddActivity" android:orientation="vertical">

    <TextView
            android:text="หัวข้อการแจ้งเตือน"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/textView"
            android:layout_marginTop="24dp"
    />
    <TextView
            android:text="จำนวนกระพริบตา"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="ครั้ง"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/textView3"
            android:layout_marginTop="20dp"/>
    <EditText
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addTxtName"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="รูปแบบการแจ้งเตือน"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/textView4"
            android:layout_marginTop="20dp"/>
    <Spinner
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:id="@+id/spinner"
            android:layout_marginTop="12dp"/>
    <Spinner
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:id="@+id/spinner2"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="เสียงแจ้งเตือน"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/textView5"
            android:layout_marginTop="24dp"/>
    <Spinner
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:id="@+id/spinner3"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="ข้อความแจ้งเตือน"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/textView6"
            android:layout_marginTop="24dp"/>
    <EditText
            android:layout_width="330dp"
            android:layout_height="125dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addTxtMsg"
            android:layout_marginTop="24dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


        <Button
                android:text="บันทึก"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSave"

                android:layout_alignParentLeft="true"/>
        <Button
                android:text="ยกเลิก"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCC"

                android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>